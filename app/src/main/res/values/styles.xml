<resources>

    <style name="Widget.Theme.ApprovalMatrix.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.ApprovalMatrix.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>
    <style name="FullScreenTheme" parent="">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="actionBarStyle">@style/CustomActionBarStyle</item>
    </style>

    <style name="CustomActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/primary_100</item>
    </style>

    <style name="headline_large">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">28sp</item>
        <item name="lineHeight">36sp</item>
    </style>
    <style name="headline_medium">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">24sp</item>
        <item name="lineHeight">32sp</item>
    </style>

    <style name="headline_small_r">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="lineHeight">28sp</item>
    </style>

    <style name="title_medium">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">24sp</item>
    </style>

    <style name="title_regular">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">24sp</item>
    </style>

    <style name="body_medium">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">20sp</item>
    </style>

    <style name="body_regular">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">20sp</item>
    </style>

</resources>